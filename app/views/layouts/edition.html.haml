!!! 5
%html
  %head
    %title
      Pickard Ayune -
      = @date
    =stylesheet_link_tag :all
    =javascript_include_tag :defaults
    -[:rss, :atom].each do |format|
      =auto_discovery_link_tag format, news_url(format)
    - if Rails.env.production?
      %script{:src => 'http://search.twitter.com/search.json?q=%23pickard&callback=showtweets'}
    - else
      %script{:src => '/example_twitter_search_results.js'}
  %body
    .page
      .header
        .name
          %h1
            =link_to 'Pickard Ayune', root_path
        .byline
          .date=  @date
          .slogan just past Jerkwater Road
          .price  25&cent;
      .content
        =yield
    .footer
      %a{:href => admin_dashboard_path} &#x03c0;
